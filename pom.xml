	<repositories>
		<repository>
			<id>net.java.repository</id>
			<name>Java.net repository</name>
			<url>http://download.java.net/maven/2/</url>
		</repository>
		<repository>
			<id>org.hippocms</id>
			<name>Hosts htmlcleaner</name>
			<url>http://repository.hippocms.org/maven2/</url>
		</repository>
		<repository>
